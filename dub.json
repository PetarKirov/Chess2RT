{
	"name": "chess2rt",
	"description": "A variation of chess written in D, using raytracer for rendering.",
	"copyright": "Copyright Â© 2014, ZombineDev",
	"authors": [ "ZombineDev" ],
	"targetType": "executable",
	"targetPath": "bin/",
	
	"dependencies": {
		"ae-graphics": "0.0.5",
		"gfm:sdl2": ">=2.0.16",
		"gfm:math": ">=2.0.16",
		"sdlang-d": "0.9.1",
		"logger": "0.3.3",
		"libinputvisitor": "1.1.0",
		"derelict-sdl2": "1.9.2",
		"derelict-util": "1.9.1",
	},

	"copyFiles-windows-x86": ["lib/win32/SDL2.dll"],
	"copyFiles-windows-x86_64": ["lib/win64/SDL2.dll"],
	
	"configurations": [
		{
			"name": "win32",
			"platforms": ["windows"],
			"targetPath": "bin/Win32"
		},
		{
			"name": "win64",
			"platforms": ["windows"],
			"targetPath": "bin/Win64"
		},
		{
			"name": "linux32",
			"platforms": ["linux"],
			"targetPath": "bin/Linux32"
		},
		{
			"name": "linux64",
			"platforms": ["linux"],
			"targetPath": "bin/Linux64"
		}		
	],
	
	"subConfigurations": {
		"sdlang-d": "library"
	}
}
