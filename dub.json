{
	"name": "chess2rt",
	"description": "A variation of chess written in D, using raytracer for rendering.",
	"copyright": "Copyright Â© 2014, ZombineDev",
	"authors": [ "ZombineDev" ],
	"targetType": "executable",
	"targetPath": "bin/",
	
	"dependencies": {
		"derelict-util": ">=2.0.3",
		"derelict-sdl2": ">=1.9.6",
		"logger": ">=2.66.0",
		"gfm:sdl2": ">=2.3.4",
		"gfm:math": ">=2.3.4",
		"sdlang-d": ">=0.9.2"
	},

	"buildTypes": {
		"gdb_release": {
			"buildOptions": ["releaseMode", "optimize", "inline", "debugInfo"]
		}
	},

	"copyFiles-windows-x86": ["lib/win32/SDL2.dll"],
	"copyFiles-windows-x86_64": ["lib/win64/SDL2.dll"],
	
	"configurations": [
		{
			"name": "win32",
			"platforms": ["windows-x86"],
			"targetPath": "bin/Win32"
		},
		{
			"name": "win64",
			"platforms": ["windows-x86_64"],
			"targetPath": "bin/Win64"
		},
		{
			"name": "linux32",
			"platforms": ["linux-x86"],
			"targetPath": "bin/Linux32"
		},
		{
			"name": "linux64",
			"platforms": ["linux-x86_64"],
			"targetPath": "bin/Linux64"
		}		
	],
	
	"subConfigurations": {
		"sdlang-d": "library"
	}
}
